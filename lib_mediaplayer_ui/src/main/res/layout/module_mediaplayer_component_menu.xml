<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_mediaplayer_color_00000000"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false">

    <RelativeLayout
        android:id="@+id/module_mediaplayer_component_menu_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/module_mediaplayer_shape_shandow_down_to_up"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <!-- 选项 -->
        <RadioGroup
            android:id="@+id/module_mediaplayer_component_menu_tab_root"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="10" />

        <!-- 数据 -->
        <RadioGroup
            android:id="@+id/module_mediaplayer_component_menu_data_root"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/module_mediaplayer_component_menu_tab_root"
            android:focusable="false"
            android:orientation="horizontal"
            android:weightSum="10" />

        <!-- 信息 -->
        <LinearLayout
            android:id="@+id/module_mediaplayer_component_menu_flag_root"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/module_mediaplayer_component_menu_tab_root"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="false"
            android:orientation="horizontal"
            android:weightSum="10" />

    </RelativeLayout>

</RelativeLayout>