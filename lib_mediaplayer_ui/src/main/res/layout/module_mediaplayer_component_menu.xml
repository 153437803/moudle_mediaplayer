<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_mediaplayer_color_00000000"
    android:focusable="false"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/module_mediaplayer_component_menu_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:visibility="gone"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="倍速" />

        <RadioGroup
            android:id="@+id/module_mediaplayer_component_menu_speed_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/module_mediaplayer_component_menu_speed_0_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:focusable="true"
                android:text="0.5" />
            <RadioButton
                android:id="@+id/module_mediaplayer_component_menu_speed_1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:focusable="true"
                android:text="1.0" />

            <RadioButton
                android:id="@+id/module_mediaplayer_component_menu_speed_1_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:focusable="true"
                android:text="1.5" />

            <RadioButton
                android:id="@+id/module_mediaplayer_component_menu_speed_2_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:focusable="true"
                android:text="2" />

            <RadioButton
                android:id="@+id/module_mediaplayer_component_menu_speed_2_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:focusable="true"
                android:text="2.5" />

            <RadioButton
                android:id="@+id/module_mediaplayer_component_menu_speed_3_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:focusable="true"
                android:text="3" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>