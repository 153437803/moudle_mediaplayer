<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">

    <RelativeLayout
        android:id="@+id/module_mediaplayer_component_prepare_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:visibility="gone">

        <!-- 背景 -->
        <ImageView
            android:id="@+id/module_mediaplayer_component_prepare_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false" />


        <!-- 转圈 -->
        <lib.kalu.mediaplayer.widget.loading.MPLoadingView
            android:id="@+id/module_mediaplayer_component_prepare_pb"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:indeterminateDuration="2000"
            android:longClickable="false"
            app:lv_color_round="@color/module_mediaplayer_color_ffffff"
            app:lv_count="8"
            app:lv_radius="10dp"
            app:lv_rate="0.9" />

        <!-- 名称 -->
        <TextView
            android:id="@+id/module_mediaplayer_component_prepare_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/module_mediaplayer_component_prepare_pb"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:focusable="false"
            android:textColor="@color/module_mediaplayer_color_ffffff"
            android:textSize="30sp" />

        <!-- 网速 -->
        <TextView
            android:id="@+id/module_mediaplayer_component_prepare_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_mediaplayer_component_prepare_pb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:focusable="false"
            android:textColor="@color/module_mediaplayer_color_ffffff"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>
