<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_mediaplayer_color_00000000"
    android:focusable="false">

    <LinearLayout
        android:id="@+id/module_mediaplayer_component_try_see_root"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/module_mediaplayer_shape_shandow_down_to_up"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/module_mediaplayer_component_try_see_message"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center_vertical|left"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <!-- 进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/module_mediaplayer_component_try_see_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:focusable="false"
                android:gravity="center"
                android:maxEms="3"
                android:minEms="3"
                android:text="00:00"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/module_mediaplayer_component_try_see_seekbar"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="false"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:progressDrawable="@drawable/module_mediaplayer_shape_seek_progress"
                android:thumb="@drawable/module_mediaplayer_shape_seek_thumb"
                android:thumbOffset="0dp" />

            <TextView
                android:id="@+id/module_mediaplayer_component_try_see_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:focusable="false"
                android:gravity="center"
                android:maxEms="3"
                android:minEms="3"
                android:text="00:00"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>